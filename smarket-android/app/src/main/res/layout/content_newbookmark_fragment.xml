<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lite_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".User.Bookmark.bookmark_fragment"
    tools:showIn="@layout/activity_newbookmark_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bookmark_itemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"
        android:background="@color/color_lite_gray"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="fitStart"
            android:src="@drawable/smarket_footprint"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
