<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotdeal_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectableItemBackground">

        <TextView
            android:id="@+id/hotdeal_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:text="titletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitletitle"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_site_textView" />

        <ImageView
            android:id="@+id/eye_imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/eye"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/comment_imageView" />

        <TextView
            android:id="@+id/views_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:text="00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/eye_imageView"
            app:layout_constraintStart_toEndOf="@+id/eye_imageView" />

        <ImageView
            android:id="@+id/comment_imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotdeal_list_item_title" />

        <TextView
            android:id="@+id/comment_textView"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:text="00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/comment_imageView"
            app:layout_constraintStart_toEndOf="@+id/comment_imageView" />

        <TextView
            android:id="@+id/posted_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="00 시간 전"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/hotdeal_category"
            android:gravity="center_vertical"
            android:paddingHorizontal="6dp"
            android:text="카테고리"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/category_site_textView"
            app:layout_constraintTop_toTopOf="@+id/category_site_textView" />

        <TextView
            android:id="@+id/category_site_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hotdeal_category_site"
            android:gravity="center_vertical"
            android:paddingHorizontal="6dp"
            android:text="카테고리"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
