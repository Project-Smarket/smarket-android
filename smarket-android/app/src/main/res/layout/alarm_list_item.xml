<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/alarm_item_imageView"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarm_type_textView" />

    <TextView
        android:id="@+id/alarm_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:inputType="textMultiLine"
        android:text="20/05/22"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alamr_item_title_textView"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:inputType="textMultiLine"
        android:text="안드로이드안드로이드안드로이드안드로이드안드로이드안드로이드안드로이드안드로이드"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alarm_item_imageView"
        app:layout_constraintTop_toTopOf="@+id/alarm_item_imageView" />

    <TextView
        android:id="@+id/alarm_item_price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:text="39,800"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/alarm_won_textVIew" />

    <TextView
        android:id="@+id/alarm_diff_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:text="1000원"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/alarm_item_price_textView"
        app:layout_constraintEnd_toStartOf="@+id/direction_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/alamr_item_title_textView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/alarm_productType_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:text="최저가"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/alarm_item_price_textView"
        app:layout_constraintEnd_toStartOf="@+id/alarm_item_price_textView" />

    <TextView
        android:id="@+id/alarm_won_textVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/alarm_item_imageView"
        android:layout_toRightOf="@+id/alarm_item_imageView"
        android:text="원"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/alarm_item_price_textView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/alarm_type_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/alarm_type_down"
        android:gravity="center_vertical"
        android:paddingHorizontal="6dp"
        android:text="하락"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/direction_imageView"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:filterTouchesWhenObscured="false"
        app:layout_constraintStart_toEndOf="@+id/alarm_type_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/direction" />

    <ImageView
        android:id="@+id/direction_imageView2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:filterTouchesWhenObscured="false"
        app:layout_constraintBottom_toBottomOf="@+id/alarm_diff_textView"
        app:layout_constraintEnd_toEndOf="@+id/alarm_won_textVIew"
        app:layout_constraintTop_toTopOf="@+id/alarm_diff_textView"
        app:srcCompat="@drawable/direction" />

</androidx.constraintlayout.widget.ConstraintLayout>
