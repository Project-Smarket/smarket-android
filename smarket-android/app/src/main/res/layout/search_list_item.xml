<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SelectableItemBackground">

        <ImageView
            android:id="@+id/search_list_item_image"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_list_item_title"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:inputType="textMultiLine"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/heart_btn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/search_list_item_image"
            app:layout_constraintTop_toTopOf="@+id/search_list_item_image" />

        <TextView
            android:id="@+id/search_list_item_mallName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:inputType="textMultiLine"
            android:text="네이버"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/search_list_item_title"
            app:layout_constraintTop_toBottomOf="@+id/search_list_item_productype" />

        <TextView
            android:id="@+id/search_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:text="39,800"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/search_list_item_productype"
            app:layout_constraintStart_toEndOf="@+id/search_list_item_productype" />

        <TextView
            android:id="@+id/search_list_item_productype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:text="최저가"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/search_list_item_image"
            app:layout_constraintTop_toBottomOf="@+id/search_list_item_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/search_list_item_image"
            android:layout_toRightOf="@+id/search_list_item_image"
            android:text="원"
            android:textColor="@color/red"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/search_list_item_price"
            app:layout_constraintStart_toEndOf="@+id/search_list_item_price" />

        <ImageView
            android:id="@+id/heart_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_list_item_title" />

        <ImageView
            android:id="@+id/cash_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/mybookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/heart_btn"
            app:layout_constraintTop_toBottomOf="@+id/heart_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
